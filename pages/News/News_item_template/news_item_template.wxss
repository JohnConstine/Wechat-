/* NewsItem模板样式 */
.New_author_star{
  margin: 10rpx 0 20rpx 10rpx;
}
.New_star{
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
}
.star_data{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx
}
.New_title{
font-size: 34rpx;
font-weight: 600;
color: #333;
margin-bottom: 10px;
margin-left: 10px;
}
.star_img{
  margin-left:16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0; 
  margin-bottom: 15px;
}
.New_content{
  text-indent:2em;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left:20rpx;
  letter-spacing: 2rpx; 
  line-height: 40rpx;
}
.New_end{
  font-size: 14rpx;
  flex-direction:row;
  line-height: 16px;
  margin-left: 10px;
}
.New_end_img{
  height: 30px;
  width: 30px;
  margin-right:25px;
  vertical-align: middle;
}
.New_container{
  display: flex;
  flex-direction:column;
  margin-top:20rpx;
  margin-bottom: 40rpx;
  background-color:#fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px;
  padding-bottom: 5px;
}
